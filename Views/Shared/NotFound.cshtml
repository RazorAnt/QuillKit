@{
    ViewData["Title"] = "Page Not Found";
    ViewData["Description"] = "The page you're looking for doesn't exist.";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="text-center">
                <h1 class="display-1 fw-bold text-danger mb-4">404</h1>
                <h2 class="display-5 mb-3">Page Not Found</h2>
                <p class="lead mb-4 text-muted">
                    The page you're looking for doesn't exist or has been moved. Don't worry, let's get you back on track!
                </p>

                <div class="row g-3 justify-content-center mb-5">
                    <div class="col-sm-auto">
                        <a href="/" class="btn btn-primary">
                            <i class="bi bi-house-fill me-2"></i>Back to Home
                        </a>
                    </div>
                </div>

                <div class="card bg-light mt-5">
                    <div class="card-body">
                        <h5 class="card-title">Lost?</h5>
                        <p class="card-text mb-0">
                            Use the search bar at the top to find what you're looking for, or visit the home page to explore recent posts.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    html.dark-mode .card.bg-light {
        background-color: #2a2a2a !important;
    }

    html.dark-mode .card.bg-light .card-title {
        color: #e0e0e0;
    }

    html.dark-mode .card.bg-light .card-text {
        color: #b0b0b0;
    }
</style>
